# Azure Active Directory
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_CLIENT_ID=your-client-id-here
AZURE_AD_CLIENT_SECRET=your-client-secret-here

# Azure Key Vault (si usas Key Vault para secrets)
KEY_VAULT_NAME=perito-app-keyvault

# Microsoft Graph API
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
GRAPH_SCOPES=https://graph.microsoft.com/.default

# OneDrive Configuration
ONEDRIVE_FOLDER_ROOT=DatosPeritos

# Azure SQL Database
DB_SERVER=perito-db.database.windows.net
DB_DATABASE=PeritoAppDB
DB_USER=sqladmin
DB_PASSWORD=your-db-password-here
DB_ENCRYPT=true

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://perito-app-web.azurewebsites.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
