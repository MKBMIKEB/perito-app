# Azure Configuration - Perito App
# Copia este archivo como .env y completa con tus credenciales de Azure

# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://perito-app-cosmos.documents.azure.com:443/
AZURE_COSMOS_KEY=TU_COSMOS_DB_PRIMARY_KEY_AQUI
AZURE_COSMOS_DATABASE=PeritoAppDB

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=peritoappstorage
AZURE_STORAGE_SAS_TOKEN=TU_SAS_TOKEN_AQUI
AZURE_STORAGE_CONTAINER=fotos-evidencias

# Azure AD B2C (Opcional - para autenticaci√≥n avanzada)
AZURE_AD_CLIENT_ID=TU_CLIENT_ID_AQUI
AZURE_AD_AUTHORITY=https://peritoapplogin.b2clogin.com/peritoapplogin.onmicrosoft.com/B2C_1_signupsignin
AZURE_AD_REDIRECT_URI=msauth://com.peritoapp/callback

# EAS/Expo Configuration
EXPO_TOKEN=your_expo_token_here

# Environment
NODE_ENV=development